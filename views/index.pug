doctype html
html
  head
    title=title
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:500,700|Roboto:400,500,700,900")
    link(rel="stylesheet" href='/style.css')
    link(rel="preload" href="https://drop.fra1.cdn.digitaloceanspaces.com/shared/quiz.webp" as="image")
  body.js-body
    header

    div.container
      form.view.js-join
        img(src="https://drop.fra1.cdn.digitaloceanspaces.com/shared/hd.webp" class="main-image")
        input(type='text' name='name' placeholder='Your name' required='required')
        input(type='number' name='team' placeholder='Your team number' required='required')
        button(type='submit')='Join'

      div.view.js-joined.hidden
        p.js-joined-info=""
        button.js-buzzer.buzzer()='Buzz!!!'

    script(src='/socket.io/socket.io.js')
    script(src='/join.js')
